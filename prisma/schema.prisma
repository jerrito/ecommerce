// schema.prisma
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role{
  ADMIN
  USER
}
model User{
  id Int @id @default(autoincrement())
   userName String 
   email String @unique
   password String 
   role Role @default(USER)
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
   address Address[]
   cart Cart[]
   @@map("Users")
   
}


model Address{
  id Int @id @default(autoincrement())
   formattedddress String 
   lat Decimal 
   lng Decimal 
   city String? 
   country String? 
   pinCode String? 
   userId Int
   user User @relation(fields: [userId],references: [id])
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
   
   
   @@map("Address")
}

model Products{
  id Int @id @default(autoincrement())
  name String 
  description String 
  price Decimal 
  tag String 
  createsAt DateTime  @default(now())
  updateAt DateTime @updatedAt
 cart Cart[]
  @@map("products")
}


model Cart{
  id Int @id @default(autoincrement())
  quantity Int
  userId Int
  user User @relation(fields: [userId],references: [id])
  productId Int
  product Products @relation(fields: [productId],references: [id])
  createsAt DateTime  @default(now())
  updateAt DateTime @updatedAt

  @@map("cart")
}
